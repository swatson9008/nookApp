doctype html
html
  head
    title Category List

  body
    h1 Category List

    ul
      each category in categories
        li
          a(href=`/category/${category._id}`) #{category.name}

    //- Add styling if needed
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }
      h1 {
        color: #333;
      }
      ul {
        list-style: none;
        padding: 0;
      }
      li {
        margin-bottom: 10px;
      }
      a {
        text-decoration: none;
        color: #007bff;
      }
