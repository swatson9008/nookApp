extends layout

block content
  h1 Furniture List

  ul
    each furniture in furnitureList
      li
        h3 #{furniture.name}
        p Description: #{furniture.description}
        p Price: $#{furniture.price.toFixed(2)}
        p Quantity: #{furniture.quantity}

  //- Add styling if needed
  style.
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    h1 {
      color: #333;
    }
    ul {
      list-style: none;
      padding: 0;
    }
    li {
      margin-bottom: 20px;
      border: 1px solid #ccc;
      padding: 10px;
      border-radius: 5px;
    }
    h3 {
      margin-bottom: 5px;
    }
